  "processed_dir": "./data/processed/blt",
  "metadata_dir": "./data/metadata/blt",
  "num_workers": 2,
  "log_steps": 50,
  "entropy_threshold": 0.5,
  "force_cpu": false,
  "use_dynamic_patching": true,
  "min_patch_size": 8,
  "max_patch_size": 128,
  "gradient_checkpointing": true,
  "precision": "float32",
  "platform_optimizations": "mps",
  "data_config": {
    "chunk_size": 256,
    "overlap": 0,
