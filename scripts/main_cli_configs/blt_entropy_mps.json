{
  "model_type": "blt",
  "hidden_size": 128,
  "num_layers": 2,
  "num_heads": 4,
  "dropout": 0.1,
  "block_size": 128,
  "batch_size": 16,
  "max_steps": 5000,
  "eval_steps": 250,
  "save_steps": 500,
  "learning_rate": 5e-5,
  "warmup_steps": 250,
