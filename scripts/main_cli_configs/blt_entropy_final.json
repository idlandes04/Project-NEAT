{
  "model_type": "blt",
  "hidden_size": 512,
  "num_layers": 4,
  "num_heads": 8,
  "dropout": 0.2,
  "block_size": 256,
  "batch_size": 64,
  "max_steps": 20000,
  "eval_steps": 500,
  "save_steps": 1000,
  "learning_rate": 3e-5,
  "min_learning_rate": 1e-6,
  "lr_schedule": "cosine",
  "warmup_steps": 2000,
  "gradient_accumulation_steps": 8,
  "weight_decay": 0.01,
  "mixed_precision": true,
  "gradient_clipping": 1.0,
  "output_dir": "./outputs/byte_lm_final",
  "train_data_dir": "./data/pile_subset/train",
  "eval_data_dir": "./data/pile_subset/eval",
  "synthetic_data": {
    "enabled": true,
    "percentage": 33,
    "patterns": ["alternating", "repeating", "random"],
    "min_length": 64,
    "max_length": 1024
  },
  "binary_data": {
    "enabled": true,
    "percentage": 33,
    "source_dir": "./data/binary_samples"
  },
  "data_processing": {
    "chunk_size": 1024,
    "overlap": 512,
    "balance_sources": true
  },
  "validation": {
    "holdout_percentage": 10,
    "special_test_cases": true
  },
  "entropy_threshold_annealing": {
    "enabled": true,
    "start": 0.7,
    "end": 0.3,
    "steps": 10000
  },
  "entropy_diversity_loss": {
    "enabled": true,
    "weight": 0.1
  },
  "cache_dir": "./data/cache/byte_lm_final", 
  "num_workers": 4,
  "log_steps": 100,
  "profiling": {
    "enabled": true,
    "trace_steps": [100, 1000, 5000, 10000]
  },
  "checkpointing": {
    "save_best_perplexity": true,
    "save_best_entropy_quality": true,
    "keep_last_n": 5
  },
  "force_cpu": false
}